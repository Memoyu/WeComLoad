            @foreach (var demo in demos)
            {
                <AntDesign.Col Span="24" Class="code-boxes-col-1-1" Style="padding-left: 8px; padding-right: 8px;">
                    <div id="@demo.Id" style="margin: 20px 0;">
                        <div style="font-size: 17px; font-weight: bold;margin-bottom: 20px;">@demo.Title</div>
                        @GetShowCase(demo.Type)
                    </div>
                </AntDesign.Col>

            }
        </Row>
