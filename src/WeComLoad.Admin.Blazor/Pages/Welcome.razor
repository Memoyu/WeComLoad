@page "/"

<PageContainer Title="Demo 调试">
    <div class="toc-affix">
        <Affix OffsetTop="16">
            <Anchor Key="Title">
                @foreach (var demo in demos)
                {
                    <AnchorLink Href="@($"/#demo-{demo.Id}")" Title="@demo.Title" />
                }
            </Anchor>
        </Affix>
    </div>
    <section class="demo-content">
